<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.littlebuddha.backstage.system.mapper.DepartmentMapper">

    <sql id="departmentColumns">
        id AS "id",
        name AS "name",
        parent_id AS "parentId",
        parent_ids AS "parentIds",
        type AS "type",
        status AS "status",
        sort AS "sort",
        create_by AS "createBy.id",
        create_date AS "createDate",
        update_by AS "updateBy.id",
        update_date AS "updateDate"
    </sql>

    <select id="get" resultType="com.littlebuddha.backstage.system.entity.Department">
        SELECT
        <include refid="departmentColumns"/>
        FROM system_department
        WHERE id=#{id}
    </select>

    <select id="findByParentId" resultType="com.littlebuddha.backstage.system.entity.Department">
        SELECT
        <include refid="departmentColumns"/>
        FROM system_department a
        <where>
            <!-- 判断条件参数是否为空 -->
            <if test="parentId != null and parentId != ''">
                and a.parent_id = #{id}
            </if>
        </where>
    </select>

    <select id="findAllList" resultType="com.littlebuddha.backstage.system.entity.Department">
        SELECT
        <include refid="departmentColumns"/>
        FROM system_department
    </select>
</mapper>